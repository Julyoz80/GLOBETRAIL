<div class="travels-container">
  <% @travels.each do |travel| %>
    <div class="travel-card">
      <% if travel.photo.attached? %>
      <%= cl_image_tag travel.photo.key, height: 100, width: 400, crop: :fill %>
      <% end %>
      <div class="travel-card-infos">
        <%= link_to travel.country, travel_path(travel), style:"text-decoration: none; font-size: 16px; font-weight: bold; margin: 0; color: #219ebc" %>
        <div class="travel-infos">
          <p>Number of traveller : <%= travel.number_of_travellers %>
          <br>Trip duration : <%= travel.trip_duration %> days
          <br>Maximum budget : <%= travel.budget %> €</p>
        </div>
      </div>
    </div>
  <% end %>
</div>
<div class="row ms-2 mt-3 link">
   <%= link_to "Créer un nouveau voyage", new_travel_path, class: "btn btn-primary link-btn", style:"text-decoration: none; width: 100%; margin: 16px; margin-right: 32px;" %>
</div>
